{
  "permissions": {
    "allow": [
      "Bash(uv run *)",
      "Bash(git add:*)",
      "Bash(git status)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(docker compose *)",
      "Bash(cat *)",
      "Bash(ls *)",
      "Bash(find *)",
      "Skill(run-tests)"
    ],
    "deny": [
      "Bash(rm -rf *)",
      "Bash(git push *)",
      "Bash(git reset --hard *)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/post-edit-check.sh"
          }
        ]
      }
    ]
  }
}
